@page
@model IndexModel
@{
    ViewData["Title"] = "STEM Salaries";
}
 <div>
        <div class="form-container">
            <form method="post" enctype="multipart/form-data">
                <h2>STEM Salaries</h2>
                                
                <div class="form-group">
                    <label>Company</label>
                    <select class="form-control" asp-for="IdCompany" asp-items="Model.Companies"></select>
                </div>
                <div class="form-group">
                    <label>Title</label>
                    <select class="form-control" asp-for="IdTitle" asp-items="Model.Titles"></select>
                </div>

                <div class="form-group">
                    <label>Location</label>
                    <select class="form-control" asp-for="IdLocation" asp-items="Model.Locations"></select>
                </div>
                 <div class="form-group">
                    <label>Years Experience</label>
                    <select class="form-control" asp-for="Salary.YearsExperience" asp-items="Model.YearsExperience"></select>
                </div>
                <div class="form-group">
                    <label>Years Company</label>
                    <select class="form-control" asp-for="Salary.YearsCompany" asp-items="Model.YearsCompany"></select>
                </div>
                <div class="form-group">
                  <label asp-for="Salary.Gender"></label>
                   <select class="form-control" name="Gender">
                    <option value="NA">NA</option>
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>
                    <option value="Other">Other</option>
                     </select>
                </div>
               

                <div class="form-group">
                    <label>Race</label>
                    <select class="form-control" asp-for="IdRace" asp-items="Model.Races"></select>
                </div>

                <div class="form-group">
                    <label>Education</label>
                    <select class="form-control" asp-for="IdEducation" asp-items="Model.Educations"></select>
                </div>


                <button class="btn btn-primary" type="submit">Predict Salary</button>
                <br />

                @if (Model.ShowSalary)
                {
                    <div>
                        <h4>Anual Salary: USD @Model.Salary.AnualCompensation</h4>
                    </div>
                }
            </form>
        </div>

    </div>